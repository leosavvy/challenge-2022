{
    "compilerOptions": {
        "target": "es5",
        "lib": ["dom", "dom.iterable", "esnext"],
        "allowJs": true,
        "skipLibCheck": true,
        "strict": false,
        "forceConsistentCasingInFileNames": true,
        "noEmit": true,
        "esModuleInterop": true,
        "module": "esnext",
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "isolatedModules": true,
        "jsx": "preserve",
        "baseUrl": ".",
        "paths": {
            "@pageTests/*": ["src/pageTests/*"],
            "@pages/*": ["pages/*"],
            "@mockData/*": ["src/mockData/*"],
            "@components/*": ["src/components/*"],
            "@reducers/*": ["src/reducers/*"],
            "@components": ["src/components"],
            "@styles/*": ["src/styles/*"],
            "@styles": ["src/styles"],
            "@public/*": ["public/*"],
            "@public": ["public"],
            "@test/*": ["test/*"],
            "@test": ["test"],
            "@utils/*": ["src/utils/*"],
            "@utils": ["src/utils"],
            "@src": ["src"],
            "@src/*": ["src/*"]
        }
    },
    "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx"],
    "exclude": ["node_modules", "test/*"]
}
